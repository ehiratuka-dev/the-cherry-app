{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./packages",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo"
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "./packages/types" },
    { "path": "./packages/core" },
    { "path": "./packages/web" }
  ]
}
