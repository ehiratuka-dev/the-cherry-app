{
	"name": "the-cherry-25",
	"private": true,
	"type": "module",
	"version": "1.0.0",
	"description": "",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "./scripts/build.sh",
		"docs": "./scripts/docs.sh",
		"lint": "./scripts/lint.sh",
		"format": "./scripts/format.sh",
		"format:core": "npm run format --workspace=@the-cherry-25/core",
		"format:types": "npm run format --workspace=@the-cherry-25/types",
		"format:web": "npm run format --workspace=@the-cherry-25/web",
		"format:fix": "prettier --write './packages/**/*.{js,ts}'",
		"format:core:fix": "npm run format:fix --workspace=@the-cherry-25/core",
		"format:types:fix": "npm run format:fix --workspace=@the-cherry-25/types",
		"format:web:fix": "npm run format:fix --workspace=@the-cherry-25/web",
		"lint:core": "npm run lint --workspace=@the-cherry-25/core",
		"lint:types": "npm run lint --workspace=@the-cherry-25/types",
		"lint:web": "npm run lint --workspace=@the-cherry-25/web",
		"lint:fix": "eslint ./ --fix",
		"lint:core:fix": "npm run lint:fix --workspace=@the-cherry-25/core",
		"lint:types:fix": "npm run lint:fix --workspace=@the-cherry-25/types",
		"lint:web:fix": "npm run lint:fix --workspace=@the-cherry-25/web",
		"index": "tsx watch packages/core/src/scripts/generate-index.script.ts",
		"index:prod": "tsx dist/core/scripts/generate-index.script.js"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/node": "^22.13.1",
		"@typescript-eslint/eslint-plugin": "^8.24.0",
		"@typescript-eslint/parser": "^8.24.0",
		"badge-maker": "^4.1.0",
		"eslint": "^9.20.1",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-prettier": "^5.2.3",
		"globals": "^15.15.0",
		"prettier": "^3.5.0",
		"typedoc": "^0.27.7",
		"typedoc-plugin-coverage": "^3.4.1",
		"typescript": "^5.7.3"
	}
}
